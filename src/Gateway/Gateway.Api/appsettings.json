{
  "AllowOrigin": "http://localhost:3000",
  "TokenSettings": {
    "Key": "",
    "Issuer": "",
    "ExpiresInDays": 0
  },
  "ReverseProxy": {
    "Routes": {
      "activities-route": {
        "ClusterId": "activities-cluster",
        "AuthorizationPolicy": "LoggedInPolicy",
        "Match": {
          "Path": "/api/activity/{**catch-all}"
        }
      },
      "athletes-route": {
        "ClusterId": "athletes-cluster",
        "AuthorizationPolicy": "LoggedInPolicy",
        "Match": {
          "Path": "/api/athlete/{**catch-all}"
        }
      },
      "strava-route": {
        "ClusterId": "strava-cluster",
        "Match": {
          "Path": "/api/auth/login"
        }
      }
    },
    "Clusters": {
      "activities-cluster": {
        "Destinations": {
          "destination": {
            "Address": "http://activities-api"
          }
        }
      },
      "athletes-cluster": {
        "Destinations": {
          "destination": {
            "Address": "http://athletes-api"
          }
        }
      },
      "strava-cluster": {
        "Destinations": {
          "destination": {
            "Address": "http://strava-api"
          }
        }
      }
    }
  },
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "AllowedHosts": "*"
  }
